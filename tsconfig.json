{
  "include": ["packages/**/*.ts"],
  "exclude": ["dist"],
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "types": [
      "jest"
    ]
  }
}
